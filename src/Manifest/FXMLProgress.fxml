<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootAP" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Manifest.FXMLProgressController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <VBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
                <VBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                    <children>
                        <Label text="Errors and warnings:" VBox.vgrow="NEVER">
                            <padding>
                                <Insets left="5.0" top="5.0" />
                            </padding>
                        </Label>
                        <TextArea fx:id="warningTA" prefHeight="300.0" prefWidth="600.0">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </TextArea>
                    </children>
                </VBox>
                <VBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" VBox.vgrow="NEVER">
                    <children>
                        <Label text="PRogress" VBox.vgrow="NEVER">
                            <padding>
                                <Insets left="10.0" top="5.0" />
                            </padding>
                        </Label>
                        <HBox VBox.vgrow="NEVER">
                            <children>
                                <Label maxHeight="25.0" minHeight="25.0" prefWidth="40" minWidth="100"  text="Done up to:" >
                                    <padding>
                                        <Insets left="10.0" right="10.0" />
                                    </padding>
                                </Label>
                                <Label fx:id="currentlyProcessingL" text="" HBox.hgrow="ALWAYS" />
                                <ProgressBar fx:id="processedPB" minWidth="100">
                                    <padding>
                                        <Insets left="10.0" right="10.0" />
                                    </padding>
                                </ProgressBar>
                                <Label fx:id="countL" text="0/0" minWidth="100" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER_RIGHT" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0" VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="finishB" minWidth="68.0" mnemonicParsing="false" onAction="#handleCloseAction" text="Close">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
